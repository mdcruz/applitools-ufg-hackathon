{
  "name": "applitools-ufg-hackathon",
  "version": "1.0.0",
  "description": "Project for showing the traditional tests and modern tests of AppliFashion website",
  "main": "index.js",
  "scripts": {
    "debug:test:traditional": "cypress open --config-file $CYPRESS_CONFIG",
    "run:test:traditional": "cypress run --config-file $CYPRESS_CONFIG --browser $CYPRESS_BROWSER --headless",
    "test:traditional": "npm run clean:reports; npm run run:test:traditional; npm run merge:reports; npm run generate:html:report",
    "clean:reports": "rm -rf mochawesome-report/",
    "merge:reports": "mochawesome-merge mochawesome-report/*.json > traditional-tests-report.json",
    "generate:html:report": "marge --reportDir $REPORTS_DIR traditional-tests-report.json"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^4.7.0",
    "mocha": "^7.2.0",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.0.3",
    "mochawesome-report-generator": "^5.1.0"
  }
}

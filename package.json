{
  "name": "applitools-ufg-hackathon",
  "version": "1.0.0",
  "description": "Project for showing the traditional tests and modern tests of AppliFashion website",
  "main": "index.js",
  "scripts": {
    "test:traditional:v1:debug": "cypress open --config-file TraditionalTestsV1/cypress.json",
    "test:traditional:v2:debug": "cypress open --config-file TraditionalTestsV2/cypress.json",
    "test:traditional:v1:firefox": "CYPRESS_BROWSER=Firefox cypress run --config-file TraditionalTestsV1/cypress.json --browser firefox --headless",
    "test:traditional:v1:chrome": "CYPRESS_BROWSER=Chrome cypress run --config-file TraditionalTestsV1/cypress.json --browser chrome --headless",
    "test:traditional:v1": "npm run clean:reports; npm run test:traditional:v1:chrome; npm run test:traditional:v1:firefox; npm run merge:reports; npm run generate:html:report:v1",
    "clean:reports": "rm -rf mochawesome-report/",
    "merge:reports": "mochawesome-merge mochawesome-report/*.json > traditional-tests-report.json",
    "generate:html:report:v1": "marge --reportDir Reports/TraditionalTestsV1 traditional-tests-report.json",
    "generate:html:report:v2": "marge --reportDir Reports/TraditionalTestsV2 traditional-tests-report.json"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^4.7.0",
    "mocha": "^7.2.0",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.0.3",
    "mochawesome-report-generator": "^5.1.0"
  }
}
